FROM node:22.14.0-alpine AS base 

FROM base AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app

COPY predictive-maintenance-app/package*.json ./
RUN npm ci

FROM base AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY predictive-maintenance-app/. .

ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_ENV=production

# Removed .env deletion since it might not exist and we don't copy it if it's not in context
# RUN rm -f .env.local

RUN npm run build

FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

COPY --from=builder /app/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/.next ./.next
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json

# Removed COPY of .env.production as we rely on runtime environment variables
# COPY --from=builder /app/.env.production ./.env.production

COPY --from=builder /app/app/failure-prediction/public/test_data.csv ./app/failure-prediction/public/test_data.csv

USER nextjs

EXPOSE 8080

ENV PORT=8080

CMD ["npm", "start"]
